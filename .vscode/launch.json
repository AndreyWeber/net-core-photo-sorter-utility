  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build",
      "program": "${workspaceFolder}/bin/Debug/netcoreapp2.0/net-core-photo-sorter-utility.dll",
      "args": ["-id:C:\\Users\\Andrey\\Pictures\\From Nexus 5", "-v"],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal",
      "stopAtEntry": false,
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
